<?xml version="1.0"?>
<Tundra>
  <!-- plugins.xml is hardcoded to be the default configuration file to load if another file
       is not specified on the command line with the "-config filename.xml" parameter. -->

  <!-- Note: All modules that implicitly depend on JavascriptModule, by performing QtScript
       object meta type registration in their registered dynamic objects (Framework::RegisterDynamicObject)
       in OnScriptEngineCreated(QScriptEngine*), must be loaded before JavascriptModule. -->

  <option name="--plugin" value="OgreRenderingModule"/>
  <option name="--plugin" value="OpenAssetImport"/>
  <option name="--plugin" value="SceneInteract"/>
  <option name="--plugin" value="EnvironmentModule"/>
  <option name="--plugin" value="PhysicsModule"/>
  <option name="--plugin" value="TundraProtocolModule"/>
  <option name="--plugin" value="ECEditorModule"/>
  <option name="--plugin" value="JavascriptModule"/>
  <option name="--plugin" value="AssetModule"/>
  <option name="--plugin" value="ArchivePlugin"/>
  <option name="--plugin" value="AvatarModule"/>
  <option name="--plugin" value="SkyXHydrax"/>
  <option name="--plugin" value="OgreAssetEditorModule"/>
  <option name="--plugin" value="DebugStatsModule"/>
  <option name="--plugin" value="SceneWidgetComponents"/>
  <option name="--plugin" value="MumblePlugin"/>
  <option name="--plugin" value="CanvasPlugin"/>

  <option name="--plugin" value="AdminotechComponents"/>

  <!-- NOTE: The startup .js scripts are specified only by the base name of the file.
       Don't specify a path here. Place the startup .js scripts to /bin/jsplugins/startup/. -->
  <!-- Important: The file names specified here are case-sensitive even on Windows! -->
  <option name="--jsplugin" value="cameraapplication.js"/>
  <option name="--jsplugin" value="FirstPersonMouseLook.js"/>
  <option name="--jsplugin" value="MenuBar.js"/>
  <option name="--jsplugin" value="RendererSettings.js"/>
  <option name="--jsplugin" value="SoundSettings.js"/>
  <option name="--jsplugin" value="InterestManagerSettings.js"/>
  <option name="--jsplugin" value="LoadingScreen.js"/>
  <option name="--jsplugin" value="SceneInstructions.js"/>

  <option name="--trustServerStorages" />
  <option name="--acceptUnknownHttpSources" />
  <option name="--acceptUnknownLocalSources" />
  <option name="--fpsLimit" value="60" />
  <option name="--hideBenignOgreMessages" />
</Tundra>
